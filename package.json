{
  "name": "trendyjs",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "7.x",
    "npm": "4.x"
  },
  "scripts": {
    "eslint": "eslint lib/app.js",
    "csslint": "stylelint lib/public/stylesheets/**/*.css",
    "lint": "npm run eslint && npm run csslint",
    "dev": "nodemon lib/bin/www --exec babel-node",
    "build": "babel lib -d dist --copy-files",
    "start": "node dist/bin/www",
    "postinstall": "if [ $NODE_ENV=production ]; then npm run build; fi",
    "test": "mocha --recursive --require babel-polyfill --compilers js:babel-register",
    "test:watch": "npm test -- --watch"
  },
  "dependencies": {
    "babel-cli": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.24.0",
    "body-parser": "~1.16.0",
    "chai": "^3.5.0",
    "compression": "^1.6.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.0",
    "download-counts": "^1.71.0",
    "express": "~4.14.1",
    "font-awesome": "^4.7.0",
    "github-api": "^3.0.0",
    "hbs": "~4.0.1",
    "lodash": "^4.17.4",
    "mocha": "^3.2.0",
    "moment": "^2.18.1",
    "mongodb": "^2.2.25",
    "mongoose": "^4.9.1",
    "morgan": "~1.7.0",
    "request": "^2.81.0",
    "serve-favicon": "~2.3.2",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.9.0",
    "sinon-mongoose": "^1.3.0",
    "stylelint": "^7.9.0"
  },
  "devDependencies": {
    "eslint": "^3.18.0",
    "eslint-config-airbnb-base": "^11.1.1",
    "eslint-plugin-import": "^2.2.0",
    "nodemon": "^1.11.0"
  }
}
